<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <HorizontalScrollView
        android:id="@+id/main_chapterfragment_hsv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_top_banner_bg"
        android:fillViewport="true"
        android:scrollbars="none">

        <RadioGroup
            android:id="@+id/main_chapterfragment_rg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/main_chapterfragment_rb01"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:paddingLeft="25dp"
                android:paddingTop="10dp"
                android:text="文章首页"
                android:textColor="@color/main_top_rb_textcolor"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/main_chapterfragment_rb02"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:text="游戏新闻"
                android:textColor="@color/main_top_rb_textcolor"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/main_chapterfragment_rb03"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:text="游戏杂谈"
                android:textColor="@color/main_top_rb_textcolor"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/main_chapterfragment_rb04"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:text="硬件信息"
                android:textColor="@color/main_top_rb_textcolor"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/main_chapterfragment_rb05"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:text="游戏前瞻"
                android:textColor="@color/main_top_rb_textcolor"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/main_chapterfragment_rb06"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:text="游戏评测"
                android:textColor="@color/main_top_rb_textcolor"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/main_chapterfragment_rb07"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:text="原创精品"
                android:textColor="@color/main_top_rb_textcolor"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/main_chapterfragment_rb08"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:text="游戏盘点"
                android:textColor="@color/main_top_rb_textcolor"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/main_chapterfragment_rb09"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:text="时事焦点"
                android:textColor="@color/main_top_rb_textcolor"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/main_chapterfragment_rb10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:text="攻略中心"
                android:textColor="@color/main_top_rb_textcolor"
                android:textSize="15sp" />
        </RadioGroup>

    </HorizontalScrollView>

    <android.support.v4.view.ViewPager
        android:id="@+id/main_chapterfragment_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>


</LinearLayout>