<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <HorizontalScrollView
        android:id="@+id/main_horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:fillViewport="true"
        android:background="@drawable/main_radiogroup_bg">
        <RadioGroup
            android:id="@+id/main_radiogroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/main_radiobutton_01"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:text="文章首页"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="2dp"
                android:padding="8dp"
                />
            <RadioButton
                android:id="@+id/main_radiobutton_02"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:text="热点新闻"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="2dp"
                android:padding="8dp"
                />
            <RadioButton
                android:id="@+id/main_radiobutton_03"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:text="游戏杂谈"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="2dp"
                android:padding="8dp"
                />
            <RadioButton
                android:id="@+id/main_radiobutton_04"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:text="硬件信息"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="2dp"
                android:padding="8dp"
                />
            <RadioButton
                android:id="@+id/main_radiobutton_05"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:text="游戏前瞻"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="2dp"
                android:padding="8dp"
                />
            <RadioButton
                android:id="@+id/main_radiobutton_06"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:text="游戏测评"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="2dp"
                android:padding="8dp"
                />
            <RadioButton
                android:id="@+id/main_radiobutton_07"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:text="原创精品"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="2dp"
                android:padding="8dp"
                />
            <RadioButton
                android:id="@+id/main_radiobutton_08"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:text="游戏盘点"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="2dp"
                android:padding="8dp"
                />
            <RadioButton
                android:id="@+id/main_radiobutton_09"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:text="时事焦点"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="2dp"
                android:padding="8dp"
                />
            <RadioButton
                android:id="@+id/main_radiobutton_10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:text="攻略中心"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="2dp"
                android:padding="8dp"
                />
        </RadioGroup>
    </HorizontalScrollView>
    <android.support.v4.view.ViewPager
        android:id="@+id/main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </android.support.v4.view.ViewPager>
</LinearLayout>